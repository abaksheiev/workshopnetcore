{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "test",
            "command": "dotnet test",
            "type": "shell",            
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "taskName": "clean",
            "type": "shell",            
            "command": "dotnet clean"
        }
    ]
}